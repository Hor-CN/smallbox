<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:id="@+id/navigation_bar_shape_lv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/navigation_bar_icon_shape"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/navigation_bar_left_lv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/navigation_bar_icon_left_shape">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="4dp"
                android:src="@drawable/navigation_bar_icon_left"
                app:tint="@color/white" />
        </LinearLayout>

        <View
            android:id="@+id/navigation_bar_divider"
            android:layout_width="1dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:background="#80F5F5F5" />

        <LinearLayout
            android:id="@+id/navigation_bar_right_lv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/navigation_bar_icon_right_shape"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="4dp"
                android:src="@drawable/navigation_bar_icon_right"
                app:tint="@color/white" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
